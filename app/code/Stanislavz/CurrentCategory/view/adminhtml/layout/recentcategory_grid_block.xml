<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="recentcategory.grid.container">
            <block class="Magento\Backend\Block\Widget\Grid" name="stanislavz_recentcategory.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">recentCategories</argument>
                    <argument name="dataSource" xsi:type="object">
                        Stanislavz\CurrentCategory\Model\ResourceModel\Collection
                    </argument>
                    <argument name="default_sort" xsi:type="string">id</argument>
                    <argument name="default_dir" xsi:type="string">desc</argument>
                    <argument name="save_parameters_in_session" xsi:type="boolean">true</argument>
                    <argument name="use_ajax" xsi:type="boolean">true</argument>
                    <argument name="grid_url" xsi:type="url" path="*/*/grid">
                        <param name="_current">1</param>
                    </argument>
                </arguments>

                <block class="Magento\Backend\Block\Widget\Grid\Massaction"
                       name="stanislavz_recentcategory.grid.massaction" as="grid.massaction">
                    <arguments>
                        <argument name="massaction_id_field" xsi:type="string">id</argument>
                        <argument name="form_field_name" xsi:type="string">categories</argument>
                        <argument name="options" xsi:type="array">
                            <item name="delete" xsi:type="array">
                                <item name="label" xsi:type="string" translate="true">Delete</item>
                                <item name="url" xsi:type="string">*/*/massDelete</item>
                                <item name="confirm" xsi:type="string" translate="true">Are you sure you want to delete?</item>
                            </item>
                        </argument>
                    </arguments>
                </block>

                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet"
                       name="stanislavz_recentcategory.grid.columnSet" as="grid.columnSet">
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="visit_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Visit ID</argument>
                            <argument name="type" xsi:type="string">number</argument>
                            <argument name="id" xsi:type="string">visit_id</argument>
                            <argument name="index" xsi:type="string">visit_id</argument>
                        </arguments>
                    </block>

                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="category_name">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Category Name</argument>
                            <argument name="index" xsi:type="string">category_name</argument>
                            <argument name="id" xsi:type="string">category_name</argument>
                        </arguments>
                    </block>

                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="category_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Category ID</argument>
                            <argument name="type" xsi:type="string">number</argument>
                            <argument name="id" xsi:type="string">category_id</argument>
                            <argument name="index" xsi:type="string">category_id</argument>
                        </arguments>
                    </block>

                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="category_url">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Category Url</argument>
                            <argument name="index" xsi:type="string">category_url</argument>
                            <argument name="id" xsi:type="string">category_url</argument>
                        </arguments>
                    </block>

                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="category_name">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Category Path</argument>
                            <argument name="index" xsi:type="string">category_full_path</argument>
                            <argument name="id" xsi:type="string">category_full_path</argument>
                        </arguments>
                    </block>

                </block>
            </block>
        </referenceBlock>
    </body>
</page>