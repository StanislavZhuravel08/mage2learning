<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">visited_categories_listing.visited_categories_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <!--<buttons>-->
            <!--<button name="add">-->
                <!--<url path="*/*/new"/>-->
                <!--<class>primary</class>-->
                <!--<label translate="true">Add New Category</label>-->
            <!--</button>-->
        <!--</buttons>-->
        <spinner>visited_categories_columns</spinner>
        <deps>
            <dep>visited_categories_listing.visited_categories_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="visited_categories_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">visit_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Stanislavz_CurrentCategory::current_category</aclResource>
        <dataProvider class="Stanislavz\CurrentCategory\Ui\Component\DataProvider" name="visited_categories_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>visit_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="observers" xsi:type="array">
                    <item name="column" xsi:type="string">column</item>
                </item>
            </argument>
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
            <filterSelect name="visit_id" provider="${ $.parentName }">
                <settings>
                    <captionValue>0</captionValue>
                    <options class="Stanislavz\CurrentCategory\Ui\Component\Listing\Column\Options"/>
                    <label translate="true">Store View</label>
                    <dataScope>store_id</dataScope>
                    <imports>
                        <link name="visible">componentType = column, index = ${ $.index }:visible</link>
                    </imports>
                </settings>
            </filterSelect>
        </filters>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected items?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="/current-category/visitedCategories/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete Visited Category</label>
                </settings>
            </action>
            <!--&lt;!&ndash;<action name="edit">&ndash;&gt;-->
                <!--&lt;!&ndash;<settings>&ndash;&gt;-->
                    <!--&lt;!&ndash;<callback>&ndash;&gt;-->
                        <!--&lt;!&ndash;<target>editSelected</target>&ndash;&gt;-->
                        <!--&lt;!&ndash;<provider>cms_page_listing.cms_page_listing.cms_page_columns_editor</provider>&ndash;&gt;-->
                    <!--&lt;!&ndash;</callback>&ndash;&gt;-->
                    <!--&lt;!&ndash;<type>edit</type>&ndash;&gt;-->
                    <!--&lt;!&ndash;<label translate="true">Edit</label>&ndash;&gt;-->
                <!--&lt;!&ndash;</settings>&ndash;&gt;-->
            <!--&lt;!&ndash;</action>&ndash;&gt;-->
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="visited_categories_columns">
        <settings>
            <!--<editorConfig>-->
                <!--<param name="clientConfig" xsi:type="array">-->
                    <!--<item name="saveUrl" xsi:type="url" path="cms/page/inlineEdit"/>-->
                    <!--<item name="validateBeforeSave" xsi:type="boolean">false</item>-->
                <!--</param>-->
                <!--<param name="indexField" xsi:type="string">visit_id</param>-->
                <!--<param name="enabled" xsi:type="boolean">true</param>-->
                <!--<param name="selectProvider" xsi:type="string">visited_categories_listing.visited_categories_listing.visited_categories_columns.ids</param>-->
            <!--</editorConfig>-->
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">visited_categories_listing.visited_categories_listing.visited_categories_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids">
            <settings>
                <indexField>visit_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <column name="visit_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created</label>
            </settings>
        </column>
        <column name="updated_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Modified</label>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Customer Name</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="value">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Category Name</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <actionsColumn name="actions" class="Stanislavz\CurrentCategory\Ui\Component\Listing\Column\VisitedCategoriesActions">
            <settings>
                <indexField>visit_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
    </columns>
</listing>
